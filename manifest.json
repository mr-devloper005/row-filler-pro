{
  "manifest_version": 3,
  "name": "Hyper Fill",
  "description": "Automatically fills login / signup forms and supports content posting on multiple sites.",
  "version": "5.0.0",

  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "tabs",
    "sidePanel",
    "webNavigation"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "action": {
    "default_title": "Open RowFiller SidePanel"
  },

  "background": {
    "service_worker": "background.js"
  },

  "side_panel": {
    "default_path": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "content/index.js",
        "content/auth.js",
        "content/autofill.js"
      ],
      "run_at": "document_idle"
    }
  ]
}
