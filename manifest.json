{
  "manifest_version": 3,
  "name": "HyperFill",
  "version": "7.1.0",
  "description": "Side-panel autofill with unified fill.js, Excel import, and deep debug logs.",
  "minimum_chrome_version": "114",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "sidePanel",
    "contextMenus"
  ],
  "host_permissions": ["<all_urls>"],
  "background": { "service_worker": "background.js" },
  "action": { "default_title": "HyperFill" },
  "side_panel": { "default_path": "panel.html" },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/fill.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    { "resources": ["xlsx.full.min.js"], "matches": ["<all_urls>"] }
  ]
}
